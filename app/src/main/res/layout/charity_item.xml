<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal"
    android:onClick="activityClick">
    <RelativeLayout
        android:id="@+id/charity_it"
        android:layout_width="120dp"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/charity_iamge"
            android:clickable="true"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:layout_centerInParent="true"
            android:scaleType="centerInside"
            android:src="@drawable/thumbnail1" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/charity_name"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginTop="19dp"
            android:gravity="left"
            android:lineSpacingMultiplier="1.3"
            android:text="同饮一湖清水，共享生态文明，保护水库环境做文明市民签名活动"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/people_num"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="10人报名"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/status"
                android:layout_width="55dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="12dp"

                android:background="#81D8CF"
                android:gravity="center"
                android:text="报名中"
                android:textColor="#ffffff"
                android:textSize="15dp" />

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
